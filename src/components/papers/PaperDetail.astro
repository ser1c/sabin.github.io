---
interface Props {
  paper: {
    title: string;
    authors: string[];
    abstract: string;
    status: string;
    year: string;
    keywords: string[];
    paperUrl: string;
    slidesUrl: string;
  }
}

const { paper } = Astro.props;
---

<div>
  <div class="mb-4">
    <a href="/#papers" class="text-blue-800 hover:underline flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
      </svg>
      Back to all papers
    </a>
  </div>
  
  <h1 class="text-3xl font-bold mb-4">{paper.title}</h1>
  
  <div class="mb-6">
    <p class="text-gray-700">{paper.authors.join(", ")}</p>
    <p class="text-gray-600 italic">{paper.status} ({paper.year})</p>
  </div>
  
  <div class="mb-8 prose">
    <h2 class="text-xl font-semibold mb-2">Abstract</h2>
    <p class="text-gray-800">{paper.abstract}</p>
  </div>
  
  <div class="mb-8">
    <h2 class="text-xl font-semibold mb-2">Keywords</h2>
    <div class="flex flex-wrap gap-2">
      {paper.keywords.map(keyword => (
        <span class="bg-gray-100 text-gray-800 px-3 py-1 rounded-full text-sm">{keyword}</span>
      ))}
    </div>
  </div>
  
  <div class="flex flex-wrap gap-4">
    <a 
      href={paper.paperUrl} 
      class="bg-blue-800 hover:bg-blue-900 text-white px-4 py-2 rounded-md flex items-center"
      target="_blank"
      rel="noopener noreferrer"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M6 2a2 2 0 00-2 2v12a2 2 0 002 2h8a2 2 0 002-2V7.414A2 2 0 0015.414 6L12 2.586A2 2 0 0010.586 2H6zm5 6a1 1 0 10-2 0v3.586l-1.293-1.293a1 1 0 10-1.414 1.414l3 3a1 1 0 001.414 0l3-3a1 1 0 00-1.414-1.414L11 11.586V8z" clip-rule="evenodd" />
      </svg>
      Download Paper
    </a>
    <a 
      href={paper.slidesUrl} 
      class="bg-gray-100 hover:bg-gray-200 text-gray-800 px-4 py-2 rounded-md flex items-center"
      target="_blank"
      rel="noopener noreferrer"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd" />
      </svg>
      View Slides
    </a>
  </div>
</div>
