---
// You can define header nav items here or import from a separate file
const navItems = [
  { text: "Papers", url: "#papers" },
  { text: "Teaching", url: "#teaching" },
  { text: "Blog", url: "https://substack.com/@sabinsubedi" },
];
---

<header class="container mx-auto max-w-3xl px-4 sm:px-6 py-6 border-b border-gray-200">
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
    <div>
      <h1 class="text-2xl sm:text-3xl font-bold mb-2">
        <a href="/" class="text-gray-800 hover:text-gray-600 transition">Sabin Subedi</a>
      </h1>
      <p class="text-sm text-gray-600">PhD Student in Applied Microeconomics</p>
    </div>
    
    <div class="mt-4 sm:mt-0 flex items-center">
      <!-- Social Links -->
      <div class="flex space-x-4 text-gray-600">
        <a href="https://x.com/realsabinsubedi" title="Twitter" class="hover:text-blue-800 transition" target="_blank" rel="noopener noreferrer">
          <span class="sr-only">Twitter/X</span>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"></path>
          </svg>
        </a>
        <a href="#" title="GitHub" class="hover:text-blue-800 transition" target="_blank" rel="noopener noreferrer">
          <span class="sr-only">GitHub</span>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.167 6.839 9.49.5.092.682-.217.682-.48 0-.237-.01-1.025-.014-1.86-2.782.603-3.369-1.193-3.369-1.193-.454-1.155-1.11-1.462-1.11-1.462-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.832.09-.645.35-1.086.636-1.336-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.03-2.682-.103-.253-.446-1.27.098-2.646 0 0 .84-.268 2.75 1.026A9.564 9.564 0 0 1 12 6.836c.85.004 1.705.114 2.504.336 1.909-1.294 2.747-1.026 2.747-1.026.546 1.376.202 2.394.1 2.646.64.699 1.026 1.591 1.026 2.682 0 3.841-2.337 4.687-4.565 4.935.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.48A10.019 10.019 0 0 0 22 12c0-5.523-4.477-10-10-10z"></path>
          </svg>
        </a>
        <a href="mailto:sabinsubedi.subedi@gmail.com" title="Email" class="hover:text-blue-800 transition">
          <span class="sr-only">Email</span>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
            <polyline points="22,6 12,13 2,6"></polyline>
          </svg>
        </a>
      </div>
    </div>
  </div>
  
  <!-- Navigation -->
  <nav class="mt-4">
    <ul class="flex flex-wrap gap-x-6 gap-y-2">
      {navItems.map(item => (
        <li>
          <a 
            href={item.url} 
            class="text-gray-700 hover:text-blue-800 font-medium transition"
            target={item.url.startsWith('http') ? '_blank' : undefined}
            rel={item.url.startsWith('http') ? 'noopener noreferrer' : undefined}
          >
            {item.text}
          </a>
        </li>
      ))}
      <li>
        <a 
          href="/cv.pdf" 
          class="text-gray-700 hover:text-blue-800 font-medium transition"
          target="_blank"
        >
          CV
        </a>
      </li>
    </ul>
  </nav>
</header>
